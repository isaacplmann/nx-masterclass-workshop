{
  "$schema": "https://json-schema.org/schema",
  "$id": "UtilLib",
  "title": "",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use?"
    },
    "directory": {
      "type": "string",
      "description": "",
      "x-prompt": {
        "message": "What directory should the library be generated in?",
        "type": "list",
        "items": [
          {
            "value": "movies",
            "label": "Movies"
          },
          {
            "value": "api",
            "label": "API"
          },
          {
            "value": "shared",
            "label": "Shared"
          }
        ]
      }
    }
  },
  "required": ["name"]
}
